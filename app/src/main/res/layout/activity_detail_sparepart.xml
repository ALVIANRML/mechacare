    <LinearLayout
        android:id="@+id/ll_detail_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_deskripsi_1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loremipsumdskfndsnvjdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvdsnvds"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Spestification"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_buy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beli"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
